<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="420.0" prefWidth="626.0" spacing="20.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tesla.controllers.AddDatasetController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
      <TextField fx:id="numOfRecs" maxWidth="242.0" prefHeight="27.0" prefWidth="215.0"
                 promptText="Number of record for each month*"/>
   </HBox>
   <Label prefHeight="130.0" prefWidth="438.0"
          text="If you want to ad  multiple records for each month, seperate records with hyphen with no spaces (i.e., 25-19-21)"
          textFill="#4a4a4a" wrapText="true"/>
   <VBox prefHeight="189.0" prefWidth="586.0">
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <Label alignment="CENTER" text="Year 1" textAlignment="CENTER"/>
      </HBox>
      <HBox alignment="CENTER" prefHeight="201.0" prefWidth="586.0" spacing="20.0">
         <TextField fx:id="jan1" promptText="January "/>
         <TextField fx:id="feb1" prefWidth="152.0" promptText="February"/>
         <TextField fx:id="mar1" promptText="March"/>
         <TextField fx:id="apr1" promptText="April"/>
         <TextField fx:id="may1" prefWidth="152.0" promptText="May"/>
         <TextField fx:id="jun1" promptText="Jun"/>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="201.0" prefWidth="586.0" spacing="20.0">
         <TextField fx:id="jul1" promptText="July"/>
         <TextField fx:id="aug1" prefWidth="152.0" promptText="August"/>
         <TextField fx:id="sep1" promptText="September"/>
         <TextField fx:id="oct1" promptText="October"/>
         <TextField fx:id="nov1" prefWidth="152.0" promptText="November"/>
         <TextField fx:id="dec1" promptText="December"/>
      </HBox>
   </VBox>
   <VBox layoutX="30.0" layoutY="169.0" prefHeight="189.0" prefWidth="586.0">
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <Label alignment="CENTER" text="Year 2" textAlignment="CENTER"/>
      </HBox>
      <HBox alignment="CENTER" prefHeight="201.0" prefWidth="586.0" spacing="20.0">
         <TextField fx:id="jan2" promptText="January "/>
         <TextField fx:id="feb2" prefWidth="152.0" promptText="February"/>
         <TextField fx:id="mar2" promptText="March"/>
         <TextField fx:id="apr2" promptText="April"/>
         <TextField fx:id="may2" prefWidth="152.0" promptText="May"/>
         <TextField fx:id="jun2" promptText="Jun"/>
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="201.0" prefWidth="586.0" spacing="20.0">
         <TextField fx:id="jul2" promptText="July"/>
         <TextField fx:id="aug2" prefWidth="152.0" promptText="August"/>
         <TextField fx:id="sep2" promptText="September"/>
         <TextField fx:id="oct2" promptText="October"/>
         <TextField fx:id="nov2" prefWidth="152.0" promptText="November"/>
         <TextField fx:id="dec2" promptText="December"/>
      </HBox>
   </VBox>
   <HBox alignment="CENTER" prefHeight="59.0" prefWidth="586.0" spacing="10.0">
      <Button layoutX="260.0" layoutY="11.0" mnemonicParsing="false" onAction="#switchToPrimary" prefHeight="32.0"
              prefWidth="87.0" text="Go Back"/>
      <Button mnemonicParsing="false" onAction="#submitDataset" prefHeight="32.0" prefWidth="87.0"
              text="Add Dataset"/>
   </HBox>
</VBox>
